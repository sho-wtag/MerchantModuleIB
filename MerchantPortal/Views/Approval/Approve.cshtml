@model MerchantPortal.Data.Models.ApprovalViewModel
@{
    ViewData["Title"] = "Approve/UnApprove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>

    @if (Model.IsApprove == false)
    {
        <h3>Are you sure you want to approve this?</h3>
    }
    else
    {
        <h3>Are you sure you want to unapprove this?</h3>
    }
    <hr />
    <div class="row">
        <div class="col-md-5">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.MerchantName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.MerchantName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.OrgName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrgName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CommissionAmount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CommissionAmount)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.BankPercentage)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.BankPercentage)
                </dd>
               
            </dl>
        </div>
        <div class="col-md-7">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.GLNumber)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.VATRegNo)
                </dd>
                
                <dt>
                    @Html.DisplayNameFor(model => model.IsApprove)
                </dt>
                <dd>
                    @if (Model.IsApprove == true)
                    {
                        <div class="label label-sm label-success">Approve</div>
                    }
                    else
                    {
                        <div class="label label-sm label-warning">UnApprove</div>
                    }
                </dd>
                @*<dt>
                    @Html.DisplayNameFor(model => model.IsApprove)
                </dt>*@
                @*<dd>
                    @if (Model.IsApprove == true)
                    {
                        <div class="label label-sm label-success">Approved</div>
                    }
                    else
                    {
                        <div class="label label-sm label-warning">Not Approved</div>
                    }
                </dd>*@
            </dl>
        </div>
    </div>
</div>
<div>
    <form asp-action="ApproveConfirm">
        <input type="hidden" asp-for="Id2" />
        @if (Model.IsApprove == false)
        {
            <input type="submit" value="Approve" class="btn btn-success" />
        }
        else
        {
            <input type="submit" value="UnApprove" class="btn btn-danger" />
        }|
        <a asp-action="ApproverList">Back to List</a>
    </form>
</div>
