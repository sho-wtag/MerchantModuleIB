@model MerchantPortal.Models.ApplicationRoleViewModel
@{
    ViewData["Title"] = "Active";
}
@if (Model.IsActive == false)
{
    <h3>Are you sure you want to active this?</h3>
}
else
{
    <h3>Are you sure you want to block this?</h3>
}
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <form asp-action="Active">
        <input type="hidden" asp-for="Id" />
        @if (Model.IsActive == false)
        {
            <input type="submit" value="Active" class="btn btn-success" />
        }
        else
        {
            <input type="submit" value="Block" class="btn btn-danger" />
        }|
        <a asp-action="Index">Back to List</a>
    </form>
</div>
