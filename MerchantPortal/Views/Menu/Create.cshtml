@model MerchantPortal.Models.MenuViewModel
@{
    ViewData["Title"] = "Create";
}
@using (Html.BeginForm("Create", "Menu", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="ApplicationRole.Name" class="control-label col-md-1"></label>
            <div class="col-md-5">
                @Html.DropDownListFor(model => model.ApplicationRole.Id, new SelectList(Model.ApplicationRoleList, "Id", "Name"), " -- Select Role -- ", htmlAttributes: new { @class = "form-control", @id = "Region" })
                @Html.ValidationMessageFor(model => model.ApplicationRole.Id, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>
    <div class="controls">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Controller Name</th>
                    <th>Actioin Name</th>
                    <th>Permission</th>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ControllerActionMappingList.Count; i++)
                {
                    <tr class="EvenRow">
                        <td>
                            @Html.DisplayFor(m => m.ControllerActionMappingList[i].ControllerToView)
                        </td>
                        <td>@Html.DisplayFor(m => m.ControllerActionMappingList[i].ActionToView) </td>
                        <td>
                            @Html.CheckBoxFor(m => m.ControllerActionMappingList[i].IsActive, false)
                            @Html.HiddenFor(m => m.ControllerActionMappingList[i].Id)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>
    <button class="btn">Cancel</button>
}
